<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.CSTV" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="android:statusBarColor">@color/dark_purple_bg</item>
    </style>

    <!-- Splash Screen Theme. -->
    <style name="Theme.CSTV.AppSplash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/dark_purple_bg</item>
        <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_launcher_foreground</item>
        <item name="windowSplashScreenAnimationDuration">2500</item>
        <item name="postSplashScreenTheme">@style/Base.Theme.CSTV</item>
    </style>

    <style name="Theme.CSTV" parent="Base.Theme.CSTV" />
</resources>